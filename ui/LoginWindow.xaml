<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="450" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None" 
        AllowsTransparency="True"
        Icon="icon.ico"
        Background="Transparent">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border CornerRadius="10" Background="{StaticResource ColorBackground}" Margin="20" BorderThickness="1" BorderBrush="{StaticResource ColorBorder}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="#2C3E50"/>
        </Border.Effect>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button x:Name="BtnClose" Style="{StaticResource CloseButtonStyle}" Grid.Row="0" Margin="0,0,5,0" HorizontalAlignment="Right"/>


            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="РемФактор" 
                           FontSize="36" FontWeight="Bold" FontFamily="Roboto"
                           Foreground="{StaticResource ColorPrimary}" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Вход в систему" 
                           FontSize="16" FontFamily="Roboto"
                           Foreground="Gray" 
                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="20,0,20,20">
                <TextBox x:Name="loginBox" Style="{StaticResource TextBoxStyle}"
                         Tag="Логин" 
                         Height="45"
                         Margin="0,0,0,15"/>

                <PasswordBox x:Name="passBox" Style="{StaticResource PasswordBoxStyle}"
                         Tag="Пароль" 
                         Height="45"
                         Margin="0,0,0,15"/>
                <Button x:Name="loginBtn" Content="ВОЙТИ" 
                        Style="{StaticResource MainButtonStyle}" 
                        Height="45"
                        FontSize="16" FontWeight="SemiBold"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>