<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая поставка" Height="720" Width="1050"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Icon="icon.ico"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml"/>
    </Window.Resources>

    <Border Background="{StaticResource ColorBackground}" CornerRadius="11" BorderBrush="{StaticResource ColorBorder}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border x:Name="TitleBar" Grid.Row="0" Background="{StaticResource ColorPrimary}" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock Text="Новая поставка" VerticalAlignment="Center" Margin="20,0,0,0" 
                               FontSize="16" Foreground="{StaticResource ColorTextWhite}"/>
                    <Button x:Name="BtnClose" HorizontalAlignment="Right" Style="{StaticResource ControlButtonStyle}" Content="✕"/>
                </Grid>
            </Border>
            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Данные поставки" FontSize="18" Style="{StaticResource MainTextBlockStyle}" Foreground="{DynamicResource ColorTextPrimary}" Margin="0,0,0,10"/>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.9*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Поставщик:" Style="{DynamicResource MainTextBlockStyle}" Foreground="{StaticResource ColorTextPrimary}"/>
                                <ComboBox x:Name="ComboSupplier" Height="35" Margin="0,5,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2"  VerticalAlignment="Bottom">
                                <Button x:Name="BtnNewSupplier" Height="35" Style="{StaticResource MainButtonStyle}" Content="Добавить поставщика" VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Подбор запчастей:" FontSize="18" Style="{StaticResource MainTextBlockStyle}" Foreground="{DynamicResource ColorPrimary}" Margin="0,10,0,5"/>
                        <TextBox x:Name="TxtSearchPart" Style="{DynamicResource TextBoxStyle}" Tag="Поиск по названию или артикулу..."/>
                    </StackPanel>
                    <DataGrid x:Name="GridSearchParts" Grid.Row="2" Margin="0,10,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Артикул" Binding="{Binding Sku}" Width="80"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                         </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Кол-во:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource ColorTextPrimary}" Style="{StaticResource MainTextBlockStyle}"/>
                        <TextBox x:Name="TxtQuantity" Width="60" Text="1" Style="{DynamicResource TextBoxStyle}" TextAlignment="Center"/>
                        <Button x:Name="BtnAdd" Content="Добавить" Width="150" Height="35" Margin="10,0,0,0" Style="{DynamicResource MainButtonStyle}"/>
                    </StackPanel>
                </Grid>
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Детали поставки" Grid.Row="0" FontSize="18" Style="{StaticResource MainTextBlockStyle}" Foreground="{DynamicResource ColorPrimary}" Margin="0,0,0,10"/>
                    <DataGrid x:Name="GridInvoice" Grid.Row="1" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Артикул" Binding="{Binding Sku}" Width="80"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Count}" Width="60"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <StackPanel Grid.Row="2">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button x:Name="BtnRemove" Content="Убрать" Style="{DynamicResource SecondaryButtonStyle}" Width="220" Height="35" HorizontalAlignment="Left" Padding="10,5"/>
                            <Button x:Name="BtnAddFile" Margin="10,0,0,0" Content="Добавить файл накладной" Style="{DynamicResource MainButtonStyle}" Width="220" Height="35" HorizontalAlignment="Left" Padding="10,5"/>
                        </StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="BtnCancel" Grid.Column="0" Height="35" Content="Отмена" Style="{DynamicResource SecondaryButtonStyle}"/>
                            <Button x:Name="BtnSaveInvoice" Grid.Column="2" Height="35"  Content="Оформить" Style="{DynamicResource MainButtonStyle}"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>