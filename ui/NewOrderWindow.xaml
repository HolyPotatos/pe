<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый заказ" Height="720" Width="1050"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="Transparent"
        Icon="icon.ico"
        ResizeMode="NoResize">

    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml"/>
    </Window.Resources>

    <Border Background="{StaticResource ColorBackground}" CornerRadius="11" BorderBrush="{StaticResource ColorBorder}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border x:Name="TitleBar" Grid.Row="0" Background="{StaticResource ColorPrimary}" CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock Text="Новый заказ" VerticalAlignment="Center" Margin="20,0,0,0" 
                               FontSize="16" Foreground="{StaticResource ColorTextWhite}"/>
                    <Button x:Name="BtnClose" HorizontalAlignment="Right" Style="{StaticResource ControlButtonStyle}" Content="✕"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Данные заказа" FontSize="18" Style="{StaticResource MainTextBlockStyle}" Foreground="{DynamicResource ColorTextPrimary}" Margin="0,0,0,10"/>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Доставка:" Style="{DynamicResource MainTextBlockStyle}" Foreground="{StaticResource ColorTextPrimary}"/>
                                <ComboBox x:Name="ComboDelivery" Height="35" Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Оплата:" Style="{DynamicResource MainTextBlockStyle}" Foreground="{StaticResource ColorTextPrimary}"/>
                                <ComboBox x:Name="ComboPayment" Height="35" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                        <TextBox x:Name="TxtAddress" Margin="0,10,0,0" Tag="Адрес..." Style="{DynamicResource TextBoxStyle}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <TextBlock Text="Подбор запчастей:" FontSize="18" Style="{StaticResource MainTextBlockStyle}" Foreground="{DynamicResource ColorPrimary}" Margin="0,10,0,5"/>
                        <TextBox x:Name="TxtSearchPart" Style="{DynamicResource TextBoxStyle}" Tag="Поиск по названию или артикулу..."/>
                    </StackPanel>

                    <DataGrid x:Name="GridSearchParts" Grid.Row="2" Margin="0,10,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Артикул" Binding="{Binding Sku}" Width="80"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Stock}" Width="60"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding RetailPrice}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
                        <TextBlock Text="Кол-во:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{StaticResource ColorTextPrimary}" Style="{StaticResource MainTextBlockStyle}"/>
                        <TextBox x:Name="TxtQuantity" Width="60" Text="1" Style="{DynamicResource TextBoxStyle}" TextAlignment="Center"/>
                        <Button x:Name="BtnAdd" Content="Добавить" Width="150" Height="35" Margin="10,0,0,0" Style="{DynamicResource MainButtonStyle}"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Корзина" Grid.Row="0" FontSize="18" Style="{StaticResource MainTextBlockStyle}" Foreground="{DynamicResource ColorPrimary}" Margin="0,0,0,10"/>

                    <DataGrid x:Name="GridCart" Grid.Row="1" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Артикул" Binding="{Binding Sku}" Width="80"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="Кол-во" Binding="{Binding Count}" Width="60"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding RetailPrice}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="2">
                        <Button x:Name="BtnRemove" Content="Убрать" Style="{DynamicResource SecondaryButtonStyle}" Width="100" Height="35" HorizontalAlignment="Left" Margin="0,0,0,10" Padding="10,5" FontSize="12"/>

                        <Border BorderThickness="0,1,0,0" BorderBrush="#EEE" Padding="0,15,0,0" Margin="0,5,0,15">
                            <DockPanel LastChildFill="False">
                                <TextBlock Text="ИТОГО:" FontSize="20" FontWeight="Bold" Style="{StaticResource MainTextBlockStyle}" Foreground="{StaticResource ColorTextPrimary}"/>
                                <TextBlock x:Name="TxtTotalSum" Text="0.00 ₽" FontSize="20" FontWeight="Bold" Foreground="#E74C3C" DockPanel.Dock="Right"/>
                            </DockPanel>
                        </Border>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="BtnCancel" Grid.Column="0" Height="35" Content="Отмена" Style="{DynamicResource SecondaryButtonStyle}"/>
                            <Button x:Name="BtnSaveOrder" Grid.Column="2" Height="35"  Content="Оформить" Style="{DynamicResource MainButtonStyle}"/>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>