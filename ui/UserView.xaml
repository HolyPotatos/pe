<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="600" MinWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="SearchBar" Style="{StaticResource TextBoxStyle}" Height="35" Margin="10,10,20,10" Tag="Поиск..." Grid.ColumnSpan="2"/>
        <StackPanel Grid.Column="1" Grid.RowSpan="2"  Grid.Row="1" Margin="10,10,20,10">
            <Button x:Name="BtnNewUser" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Content="Создать пользователя" Width="170" Height="45"/>
            <Button x:Name="BtnBlockUser" IsEnabled="False" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Content="Заблокировать" Width="170" Height="45"/>
            <GroupBox Header="Статус" FontFamily="Roboto" BorderBrush="{StaticResource ColorPrimary}" BorderThickness="2" FontSize="14" Foreground="{StaticResource ColorTextPrimary}">
                <StackPanel x:Name="GroupBoxFilter">
                    <CheckBox x:Name="status1" IsChecked="True" Content="Активен" FontFamily="Roboto" Foreground="{StaticResource ColorTextPrimary}" Margin="5" FontSize="14"/>
                    <CheckBox x:Name="status0" IsChecked="True" Content="Заблокирован" FontFamily="Roboto" Foreground="{StaticResource ColorTextPrimary}" Margin="5" FontSize="14"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <DataGrid x:Name="UserDataGrid" Grid.Row="1" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" Width="2*" Binding="{Binding FIO}"/>
                <DataGridTextColumn Header="EMail" Width="*" Binding="{Binding EMail}"/>
                <DataGridTextColumn Header="Телефон" Width="*" Binding="{Binding Phone}"/>
                <DataGridTextColumn Header="Роль" Width="*" Binding="{Binding Role}"/>
                <DataGridTextColumn Header="Логин" Width="*" Binding="{Binding Login}"/>
                <DataGridTextColumn Header="Статус" Width="*" Binding="{Binding Status}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>