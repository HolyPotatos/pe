<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="600" MinWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox Style="{StaticResource TextBoxStyle}" Margin="10,10,10,10" Tag="Поиск..." Grid.ColumnSpan="2"/>
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Content="Новый заказ" Width="150" Height="45"/>
            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Content="История заказа" Width="150" Height="45"/>
            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Content="Отменить заказ" Width="150" Height="45"/>
            <Button Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Content="Подробнее" Width="150" Height="45"/>
        </StackPanel>
        <DataGrid Grid.Row="1" Style="{StaticResource MainDataGridStyle}" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn HeaderStyle="{StaticResource DataGridHeaderStyle}" Header="Номер заказа" Width="*"/>
                <DataGridTextColumn HeaderStyle="{StaticResource DataGridHeaderStyle}" Header="Адрес доставки" Width="1.2*"/>
                <DataGridTextColumn HeaderStyle="{StaticResource DataGridHeaderStyle}" Header="Статус заказа" Width="*"/>
                <DataGridTextColumn HeaderStyle="{StaticResource DataGridHeaderStyle}" Header="Статус оплаты" Width="*"/>
                <DataGridTextColumn HeaderStyle="{StaticResource DataGridHeaderStyle}" Header="Статус доставки" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Row="2" Style="{StaticResource MainDataGridStyle}" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn HeaderStyle="{StaticResource DataGridHeaderStyle}" Header="SKU" Width="*"/>
                <DataGridTextColumn HeaderStyle="{StaticResource DataGridHeaderStyle}" Header="Название" Width="1.5*"/>
                <DataGridTextColumn HeaderStyle="{StaticResource DataGridHeaderStyle}" Header="Количество" Width="*"/>
                <DataGridTextColumn HeaderStyle="{StaticResource DataGridHeaderStyle}" Header="Цена" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>