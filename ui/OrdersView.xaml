<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinHeight="600" MinWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="SearchBar" Style="{StaticResource TextBoxStyle}" Height="35" Margin="10,10,20,10" Tag="Поиск..." Grid.ColumnSpan="2"/>
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,10,20,10">
            <Button x:Name="BtnNewOrder" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Content="Новый заказ" Width="150" Height="45"/>
            <Button x:Name="BtnOrderHistory" IsEnabled="False" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Content="История заказа" Width="150" Height="45"/>
            <Button x:Name="BtnOrderCansel" IsEnabled="False" Style="{StaticResource SecondaryButtonStyle}" Margin="0,0,0,10" Content="Отменить заказ" Width="150" Height="45"/>
        </StackPanel>
        <DataGrid x:Name="OrderDataGrid" Grid.Row="1" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="№" Width=".3*" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Адрес доставки" Width="1*" Binding="{Binding DeliveryAddress}"/>
                <DataGridTextColumn Header="Сумма" Width=".7*" Binding="{Binding TotalPrice}"/>
                <DataGridTextColumn Header="Дата" Width=".7*" Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Статус заказа" Width="*" Binding="{Binding OrderStatus}"/>
                <DataGridTextColumn Header="Тип оплаты" Width="*" Binding="{Binding PaymentType}"/>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid x:Name="OrderPartsDataGrid" Grid.Row="2" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="SKU" Width="*" Binding="{Binding SKU}"/>
                <DataGridTextColumn Header="Название" Width="1.5*" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Количество" Width="*" Binding="{Binding Count}"/>
                <DataGridTextColumn Header="Цена" Width="*" Binding="{Binding UnitRetailPrice}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>