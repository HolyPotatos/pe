<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение" Height="250" Width="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"> 
    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml"/>
    </Window.Resources>

    <Border CornerRadius="15,15,10,10" Background="{StaticResource ColorBackground}" Margin="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="#2C3E50"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/> 
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Border x:Name="HeaderBorder"
                    Grid.Row="0" 
                    Background="{StaticResource ColorPrimary}"
                    CornerRadius="10,10,0,0">
                <Grid>
                    <TextBlock x:Name="TitleText" 
                               FontFamily="Roboto"
                               FontSize="14"
                               Foreground="{StaticResource ColorTextWhite}" 
                               VerticalAlignment="Center" 
                               Margin="15,0"/>
                    
                    <Button x:Name="BtnClose" Style="{StaticResource CloseButtonStyle}" Grid.Row="0" Margin="0,0,15,0" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="20,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/> 
                    <ColumnDefinition Width="*"/>  
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image x:Name="IconInfo" Visibility="Collapsed" Source="images/info-image.png" Stretch="Uniform" Width="40" Height="40"/>
                    <Image x:Name="IconWarning" Visibility="Collapsed" Source="images/warning-image.png" Stretch="Uniform" Width="40" Height="40"/>  
                    <Image x:Name="IconError" Visibility="Collapsed" Source="images/error-image.png" Stretch="Uniform" Width="40" Height="40"/>
                </Grid>

                <TextBlock x:Name="MessageText" 
                           Grid.Column="1"
                           FontFamily="Roboto"
                           TextWrapping="Wrap" 
                           VerticalAlignment="Center" 
                           FontSize="15"
                           Foreground="{StaticResource ColorTextPrimary}" Margin="10,0,0,0"/>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0">
                <Button x:Name="BtnYes" Content="Да" Style="{StaticResource MainButtonStyle}" Width="80" Height="40" Margin="0,0,10,0" Visibility="Collapsed"/>
                <Button x:Name="BtnNo" Content="Нет" Style="{StaticResource SecondaryButtonStyle}" Width="80" Height="40" Margin="0,0,10,0" Visibility="Collapsed"/>
                <Button x:Name="BtnOk" Content="OK" Style="{StaticResource MainButtonStyle}" Width="80" Height="40" Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>