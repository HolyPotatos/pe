<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="РемФактор" Height="650" Width="1000" 
        MinHeight="650" MinWidth="1000"
        WindowStartupLocation="CenterScreen"
        Icon="icon.ico"
        AllowsTransparency="False">
    <Window.Resources>
        <ResourceDictionary Source="ResourceDictionary.xaml"/>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="35" 
            ResizeBorderThickness="6" 
            CornerRadius="25"
            GlassFrameThickness="0" />
    </WindowChrome.WindowChrome>
    <Border CornerRadius="10" Background="Transparent" BorderThickness="1" BorderBrush="{StaticResource ColorBorder}">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.2" Color="#2C3E50"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Background="{StaticResource ColorPrimary}" CornerRadius="10,10,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="BtnMinimized" Style="{StaticResource ControlButtonStyle}" Content="—"/>
                        <Button x:Name="BtnMaximized" Style="{StaticResource ControlButtonStyle}" Content="☐"/>
                        <Button x:Name="BtnClose" Style="{StaticResource ControlButtonStyle}" Content="✕"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <Image Margin="10" Width="20" Height="20" Source="images/logo.png"/>
                        <TextBlock Style="{StaticResource MainTextBlockStyle}" Text="РемФактор" FontSize="16" FontWeight="Medium"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Border Background="{StaticResource ColorPrimary}">
                    <Grid Margin="0,5,0,10">
                        <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                            <RadioButton x:Name="RBtnOrderRadio" IsChecked="True" Style="{StaticResource MenuButtonStyle}">
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Style="{StaticResource MainTextBlockStyle}" Margin="20,0,0,0" HorizontalAlignment="Right" Text="Заказы"/>
                                    <Image Source="images/orders-image.png" Stretch="Uniform" Grid.Column="1" Height="40" Width="40" Margin="10,0"/>
                                </Grid>
                            </RadioButton>
                            <RadioButton x:Name="RBtnUserRadio" Style="{StaticResource MenuButtonStyle}">
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Style="{StaticResource MainTextBlockStyle}" Margin="20,0,0,0" HorizontalAlignment="Right" Text="Пользователи"/>
                                    <Image Source="images/user-image.png" Stretch="Uniform" Grid.Column="1" Height="40" Width="40" Margin="10,0"/>
                                </Grid>
                            </RadioButton>
                            <RadioButton x:Name="RBtnWarehouseRadio" Style="{StaticResource MenuButtonStyle}">
                                <Grid Height="50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Style="{StaticResource MainTextBlockStyle}" Margin="20,0,0,0" HorizontalAlignment="Right" Text="Склад"/>
                                    <Image Source="images/warehouse-image.png" Stretch="Uniform" Grid.Column="1" Height="40" Width="40" Margin="10,0"/>
                                </Grid>
                            </RadioButton>
                        </StackPanel>
                        <Button x:Name="BtnLogout" VerticalAlignment="Bottom" Style="{StaticResource BlankButton}">
                            <Grid HorizontalAlignment="Right" Margin="24,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Style="{StaticResource MainTextBlockStyle}" HorizontalAlignment="Right" Text="Выйти"/>
                                <Image Source="images/exit-image.png" Stretch="Uniform" Grid.Column="1" HorizontalAlignment="Center" Height="30" Width="30" Margin="10,0"/>
                            </Grid>
                        </Button>
                    </Grid>
                </Border>
                <ContentControl Grid.Column="1" x:Name="MainContentControl" Background="{StaticResource ColorBackground}"/>
            </Grid>
        </Grid>
    </Border>
</Window>